{
  "name": "alumni-connect-app",
  "version": "1.0.0",
  "description": "Alumni Connect Web Application with Job Posting Feature",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "test": "jest",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "alumni",
    "networking",
    "job-posting",
    "web-application",
    "react",
    "nodejs"
  ],
  "author": "Mahaprasad Behera",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
